<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top_background"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center|bottom"
        android:background="#000"
        android:layout_marginTop="10dp"/>


    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameinsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:fontFamily="@font/montserrat_semibold"
            android:inputType="textPersonName"
            android:backgroundTint="#000"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="5dp"
            tools:ignore="InvalidId" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Input fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailinsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:fontFamily="@font/montserrat_semibold"
            android:inputType="textEmailAddress"
            android:backgroundTint="#000"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="5dp"
            tools:ignore="InvalidId" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#076D72">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordinsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password (min 6 characters)"
            android:fontFamily="@font/montserrat_semibold"
            android:inputType="textPassword"
            android:backgroundTint="#000"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/baseline_fingerprint_24"
            android:drawablePadding="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Checkboxes and buttons -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Agree to the Terms"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#000" />

    <Button
        android:id="@+id/submitinsignin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_green"
        android:padding="12dp"
        android:text="Get Started"
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#EAE0C4"
        android:textStyle="bold" />
</LinearLayout>
